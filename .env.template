# =============================================================================
# TEER BETTING APP - ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=teer_betting
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DB_PORT=5434
DATABASE_URL=postgresql://postgres:password@db:5432/teer_betting

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-please-make-it-long-and-complex
JWT_SECRET_KEY=your-jwt-secret-key-should-be-different-from-main-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:8001/api/v1
WS_URL=ws://localhost:8001/ws
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://127.0.0.1,http://127.0.0.1:80,http://localhost:3000
CORS_ORIGINS=["http://localhost", "http://localhost:80", "http://127.0.0.1", "http://127.0.0.1:80", "http://localhost:3000"]

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=false
SMTP_SSL=false
FROM_EMAIL=noreply@teer.local
FROM_NAME=Teer Betting Platform

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
PAYMENT_GATEWAY_URL=https://sandbox.payment.gateway.com
PAYMENT_GATEWAY_KEY=sandbox_key
PAYMENT_GATEWAY_SECRET=sandbox_secret
PAYMENT_WEBHOOK_SECRET=webhook_secret

# =============================================================================
# TEER GAME CONFIGURATION
# =============================================================================
GAME_TIMEZONE=Asia/Kolkata
AUTO_SCHEDULE_ENABLED=true
ROUND_DURATION_MINUTES=60
BETTING_CUTOFF_MINUTES=5
RESULT_ANNOUNCEMENT_DELAY_MINUTES=5

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
ENABLE_SMS_NOTIFICATIONS=false
SMS_PROVIDER=twilio
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

ENABLE_PUSH_NOTIFICATIONS=false
FCM_SERVER_KEY=
FCM_SENDER_ID=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9000
GRAFANA_ADMIN_PASSWORD=admin123

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_ENCRYPTION_KEY=

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
DEBUG=true
RELOAD=true
HOT_RELOAD=true
CHOKIDAR_USEPOLLING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REFERRAL_SYSTEM=true
ENABLE_BETTING=true
ENABLE_WITHDRAWALS=true
ENABLE_DEPOSITS=true
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_TIMEOUT_MINUTES=120
SESSION_SECURE=false
SESSION_HTTPONLY=true
