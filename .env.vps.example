# VPS Environment Configuration for 2GB RAM
# Copy this to .env.vps on your VPS server

# Database Settings (Optimized for 2GB RAM)
DATABASE_URL=postgresql://teer_user:change_this_secure_password@db:5432/teer_betting
POSTGRES_USER=teer_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=teer_betting

# Redis Settings
REDIS_URL=redis://redis:6379/0

# Backend API Settings
SECRET_KEY=change_this_to_a_very_secure_random_string_at_least_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=production

# Frontend Settings (Replace YOUR_VPS_IP with your actual VPS IP address)
REACT_APP_API_URL=http://YOUR_VPS_IP:8000

# Optional: If you have a domain name, use this instead:
# REACT_APP_API_URL=https://api.yourdomain.com

# pgAdmin Settings (Optional)
PGADMIN_DEFAULT_EMAIL=admin@teer.com
PGADMIN_DEFAULT_PASSWORD=admin123
