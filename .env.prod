# Production Environment Variables
DEBUG=False
ENVIRONMENT=production

# Database Configuration (Use secure values in production)
POSTGRES_DB=teer_betting_prod
POSTGRES_USER=teer_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_PORT=5432

# Application Configuration (MUST CHANGE IN PRODUCTION)
SECRET_KEY=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING_IN_PRODUCTION
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
BACKEND_PORT=8001
FRONTEND_PORT=80
REACT_APP_API_BASE_URL=https://yourdomain.com/api/v1

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Logging
LOG_LEVEL=WARNING

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
