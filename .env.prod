# Production Environment Configuration for Teer Betting Application
# ⚠️ IMPORTANT: Update all default values before deploying to production!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Teer Betting Platform
DEBUG=False
ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Production Database
DATABASE_URL=postgresql://teer_user:CHANGE_DB_PASSWORD@localhost:5432/teer_betting_prod
POSTGRES_DB=teer_betting_prod
POSTGRES_USER=teer_user
POSTGRES_PASSWORD=CHANGE_DB_PASSWORD_SECURE_32_CHARS

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Settings - ⚠️ CHANGE THIS SECRET KEY!
SECRET_KEY=CHANGE_THIS_TO_SECURE_SECRET_KEY_MIN_32_CHARACTERS_RANDOM
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_ROUNDS=12

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=20

# =============================================================================
# REDIS CONFIGURATION (Caching & Sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=CHANGE_REDIS_PASSWORD_SECURE
REDIS_MAX_CONNECTIONS=50
REDIS_TIMEOUT=10

# Session Settings
SESSION_EXPIRE_SECONDS=3600
CACHE_TTL=300

# =============================================================================
# OTP CONFIGURATION (SMS Integration)
# =============================================================================
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=3

# SMS Provider Settings (Twilio Example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative: AWS SNS
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:teer-otp

# =============================================================================
# EMAIL CONFIGURATION (Notifications)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=your_email_app_password
SMTP_USE_TLS=True

# Email Settings
FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Cloud Storage (AWS S3 Example)
AWS_S3_BUCKET=teer-betting-uploads
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=your_s3_access_key
AWS_S3_SECRET_KEY=your_s3_secret_key

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/teer-betting.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# MONITORING & METRICS
# =============================================================================
ENABLE_METRICS=True
METRICS_PORT=9090

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_S3_BUCKET=teer-betting-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#teer-betting-alerts

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# PAYMENT INTEGRATION (Future)
# =============================================================================
# Payment Gateway Settings
PAYMENT_GATEWAY=razorpay  # razorpay, stripe, payu
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe Settings
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
FORCE_HTTPS=True
SSL_CERT_PATH=/etc/ssl/certs/teer-betting.crt
SSL_KEY_PATH=/etc/ssl/private/teer-betting.key

# Let's Encrypt Settings
LETSENCRYPT_EMAIL=admin@yourdomain.com
LETSENCRYPT_DOMAINS=yourdomain.com,www.yourdomain.com

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Gunicorn Settings
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=5

# Database Query Optimization
QUERY_TIMEOUT=30
SLOW_QUERY_THRESHOLD=1.0

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# pgAdmin Settings
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_PGADMIN_PASSWORD

# Super Admin Settings
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_EMAIL=superadmin@yourdomain.com
SUPER_ADMIN_PASSWORD=CHANGE_SUPER_ADMIN_PASSWORD

# =============================================================================
# BUSINESS LOGIC SETTINGS
# =============================================================================
# Betting Limits
MIN_BET_AMOUNT=1.0
MAX_BET_AMOUNT=10000.0
DAILY_BET_LIMIT=50000.0

# Commission Settings
HOUSE_COMMISSION=10.0  # Percentage
PLATFORM_COMMISSION=2.0  # Percentage

# Payout Limits
MAX_DAILY_PAYOUT=100000.0
MAX_SINGLE_PAYOUT=50000.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REGISTRATION=True
ENABLE_BETTING=True
ENABLE_WITHDRAWALS=True
ENABLE_OTP=False
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_PUSH_NOTIFICATIONS=False

# Maintenance Mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE="System is under maintenance. Please check back later."

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================
# Weather API (for game scheduling)
WEATHER_API_KEY=your_weather_api_key

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
DEPLOYMENT_ENV=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_DATE=2024-01-01

# Docker Settings
DOCKER_REGISTRY=ghcr.io/your-username/teer-betting-app
DOCKER_TAG=latest

# Frontend Configuration  
REACT_APP_API_BASE_URL=http://104.248.158.201:8001/api/v1
FRONTEND_PORT=80
BACKEND_PORT=8001
