# Teer Betting Platform Environment Variables
# IMPORTANT: Copy this file to .env and modify as needed for your environment

# =========================================
# Database Configuration
# =========================================
POSTGRES_DB=teer_betting
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password-here
DB_PORT=5434

# Database URL for Backend (must match above credentials)
# For Docker: postgresql://[POSTGRES_USER]:[POSTGRES_PASSWORD]@db:5432/[POSTGRES_DB]
# For local dev: postgresql://[POSTGRES_USER]:[POSTGRES_PASSWORD]@localhost:[DB_PORT]/[POSTGRES_DB]
DATABASE_URL=postgresql://postgres:your-password@db:5432/teer_betting

# =========================================
# Security Settings
# =========================================
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=your-secret-key-min-32-characters-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================================
# CORS Settings (Add your VPS/production domain)
# =========================================
# Format: comma-separated list with no spaces between items
# Replace 'your-vps-ip-here' with your actual VPS IP or domain
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:80,http://localhost,http://frontend:80,http://teer_frontend:80,http://your-vps-ip-here,http://your-vps-ip-here:80,http://your-vps-ip-here:3000
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:80,http://localhost,http://frontend:80,http://teer_frontend:80,http://your-vps-ip-here,http://your-vps-ip-here:80,http://your-vps-ip-here:3000

# Add your VPS IP here (no http:// prefix)
VPS_IP=your-vps-ip-here

# =========================================
# Port Configuration
# =========================================
FRONTEND_PORT=80
BACKEND_PORT=8001

# =========================================
# Application Settings
# =========================================
DEBUG=False  # Set to False in production
ENVIRONMENT=production  # Use 'development' for local dev
APP_NAME=Teer Betting Platform
API_V1_STR=/api/v1

# Frontend API URL Configuration
# For local development:
REACT_APP_API_BASE_URL=/api/v1
# For direct connection (uncomment if needed):
# REACT_APP_API_BASE_URL=http://localhost:8001/api/v1

# =========================================
# OTP Settings
# =========================================
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# =========================================
# Redis Configuration
# =========================================
REDIS_PORT=6379
REDIS_PASSWORD=  # Set a password in production

# =========================================
# pgAdmin Configuration
# =========================================
PGADMIN_DEFAULT_EMAIL=admin@teer.com
PGADMIN_DEFAULT_PASSWORD=admin  # Change in production!

# =========================================
# Optional: Twilio Configuration (for SMS OTP)
# =========================================
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_number

# =========================================
# Optional: Domain Configuration
# =========================================
# DOMAIN=yourdomain.com
# FORCE_HTTPS=True  # Enable for production with SSL

# Production-only settings (when DEBUG=False)
# FORCE_HTTPS=True
